{
  "manifest_version": 2,
  "name": "Mining-Blocker",
  "version": "1.0.0",
  "description": "Anti mining program",

  "icons" : {
    "48" : "image/main_logo.png"
  },

  "background" : {
    "presistent" : true,
    "scripts":[
      "js/background.js"
    ]
  },

  "browser_action": {
    "default_title": "Mining-Blocker",
    "default_icon": "image/main_logo.png"
  },

  "permissions": [
    "activeTab",
    "storage",
    "unlimitedStorage",
    "tabs",
    "<all_urls>",
    "webRequest",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*"
  ],

  "author" : "Pigeon"
}
